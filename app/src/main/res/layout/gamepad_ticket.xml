<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDashboardBackground"
    android:orientation="vertical"
    android:padding="1pt">


    <LinearLayout
        android:id="@+id/list_view_gamepad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrangeTicket"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_gamepad"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/bluetooth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="1pt">

            <TextView
                android:id="@+id/title_gamepad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/description_gamepad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some description"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>